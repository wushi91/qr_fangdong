/*自定义的tobtab  */
.tob-tab{
  z-index: 88;
  width: 100%;
  height: 98rpx;
  box-sizing: border-box;
  background-color: #F7F7FA;
  display: flex;
  border-bottom: 1px solid #E3E3E6;
  position: fixed;
}

.tob-tab .tob-tab-item{
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.tob-tab .tob-tab-item .text-wrapper{
  flex: 1;
  display: flex;
  align-items: center;
}

.tob-tab .tob-tab-item text{
  box-sizing: border-box;
  display: inline-block;
  font-size:28rpx;
  color:rgba(127,131,137,1);
}

 .tob-tab .tob-tab-item .border{
  height: 4rpx;
  border-radius: 2rpx;
  background-color: rgba(0,0,0,0);
  width: 160rpx;
} 

.tob-tab .tob-tab-item-select text{
  color:rgba(46,138,230,1);
}

 .tob-tab .tob-tab-item-select .border{
  background-color: rgba(46,138,230,1);
} 

