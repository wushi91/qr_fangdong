/* pages/myinfo/myinfo.wxss */

.user-info-wrapper{
  background-color: #2E8AE6;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info-wrapper .header-image{
  margin-top: 30rpx;
  
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
}

.user-info-wrapper .username{
  margin-top: 20rpx;
  font-size:34rpx;
  color:rgba(255,255,255,1);
  line-height:48rpx;
  margin-bottom: 30rpx;
}

button{
  border: none;
  border-radius: 0rpx;
}
button::after{
  border: none;
}
.item{
  
  text-align: left;
  margin-top: 30rpx;
  background-color: white;
  display: flex;
  padding: 14rpx 12rpx 14rpx 30rpx;
  align-items: center; 
}

.item text{
  font-size:34rpx;
  color:rgba(0,0,0,1);
  line-height:48rpx;
  flex: 1;
}

.item image{
  width: 60rpx;
  height: 60rpx;
}