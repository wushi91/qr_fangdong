/*常用button样式  */
button.white-button{
  padding: 23rpx 0rpx;
  font-size:34rpx;
  line-height:48rpx;
  border-radius: 10rpx 
}

button.main-button{
  width: 480rpx;
  background-color: #2E8AE6;
  padding: 23rpx 0rpx;
  font-size:34rpx;
  color:rgba(255,255,255,1);
  line-height:48rpx;
  border-radius: 10rpx 
}

button.main-button:active{
  background-color: rgb(41, 123, 206);
}

button.main-button.disabled{
  background-color: rgb(172, 209, 245);
  color:rgba(255,255,255,1);
}

/*常用字体样式  */
text.font-content-title{
  font-size:48rpx;
  color:rgba(0,0,0,1);
  line-height:67rpx;
}
text.font-list-item{
  font-size:34rpx;
  color:rgba(53,53,53,1);
  line-height:48rpx;
}
text.font-list-item-gray{
  font-size:24rpx;
  color:rgba(136,136,136,1);
}

text.font-item-gray30{
  font-size:30rpx;
  color:rgba(136,136,136,1);
  line-height:42rpx;
}
text.font-item-red30{
  font-size:30rpx;
  color:rgba(242,73,73,1);
  line-height:42rpx;
}

text.font-list-item-red{
  font-size:24rpx;
  color:rgba(242,73,73,1);
  line-height:33rpx;
}

text.font-tip{
  font-size:28rpx;
  color:rgba(136,136,136,1);
  line-height:40rpx;
}

text.font-red-money{
  font-size:48rpx;
  color:rgba(242,73,73,1);

}
text.font-red-money::after{
  content: '元';
  font-size:24rpx;
}

text.font-black-money{
  font-size:48rpx;
  color:#353535;
}
text.font-black-money::after{
  content: '元';
  font-size:24rpx;
}


image.icon{
  width: 60rpx;
  height: 60rpx;
}

view.line{
  background-color: #DEDEDE;
  height: 2rpx;
}
